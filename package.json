{
  "name": "reverse-proxy-server",
  "version": "1.0.0",
  "description": "Advanced reverse proxy server with firewall, SSL/TLS support, and multi-domain routing",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "test": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "security:check": "npm audit",
    "security:fix": "npm audit fix"
  },
  "keywords": [
    "reverse-proxy",
    "proxy",
    "ssl",
    "https",
    "firewall",
    "load-balancer",
    "nginx-alternative"
  ],
  "author": "Yusuf Eren Gerek",
  "license": "MIT",
  "dependencies": {
    "http-proxy": "^1.18.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}

