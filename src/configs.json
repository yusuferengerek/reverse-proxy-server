{
  "http": {
    "enabled": true,
    "port": 80
  },
  "https": {
    "enabled": true,
    "port": 443,
    "certPath": "./src/Certs",
    "forceHttps": true,
    "minTlsVersion": "TLSv1.2"
  },
  "domains": {
    "configPath": "./domains"
  },
  "firewall": {
    "enabled": true,
    "rateLimit": 1000,
    "rateLimitWindow": 60000,
    "maxBodySize": 10485760,
    "maxFileSize": 5242880,
    "blockFileUploads": false,
    "bannedIPsPath": "./src/Data/banned-ips.json",
    "whitelistedIPs": [
      "127.0.0.1",
      "::1",
      "localhost"
    ],
    "exemptPaths": [
      "/",
      "/favicon.ico",
      "/_next/",
      "/api/",
      "/__nextjs",
      "/static/",
      "/assets/",
      "/public/",
      "/_nuxt/",
      "/dist/",
      "/build/",
      ".js",
      ".css",
      ".map",
      ".woff",
      ".woff2",
      ".ttf",
      ".eot",
      ".svg",
      ".png",
      ".jpg",
      ".jpeg",
      ".gif",
      ".webp",
      ".ico"
    ],
    "suspiciousPatterns": [
      "\\.\\.[\\/\\\\]",
      "etc\\/passwd",
      "proc\\/self",
      "<script",
      "javascript:",
      "onerror=",
      "onclick=",
      "eval\\(",
      "union.*select",
      "drop.*table",
      "insert.*into"
    ]
  },
  "security": {
    "enableHSTS": true,
    "hstsMaxAge": 31536000,
    "enableCSP": true,
    "cspPolicy": "default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self'",
    "enableCORS": true,
    "corsOrigin": "*",
    "enableXFrameOptions": true,
    "xFrameOptions": "SAMEORIGIN"
  },
  "compression": {
    "enabled": true,
    "threshold": 1024,
    "level": 6
  },
  "timeout": {
    "proxy": 30000,
    "server": 60000
  },
  "websocket": {
    "enabled": true
  },
  "healthCheck": {
    "enabled": true,
    "path": "/health"
  },
  "admin": {
    "enabled": true,
    "port": 63537,
    "token": "change-this-secret-token",
    "allowedIPs": []
  },
  "logging": {
    "level": "info",
    "maxFiles": "30d",
    "maxSize": "20m",
    "directory": "./logs"
  }
}
