{
  "http": {
    "enabled": true,
    "port": 80
  },
  "https": {
    "enabled": true,
    "port": 443,
    "certPath": "./src/Certs",
    "forceHttps": true,
    "minTlsVersion": "TLSv1.2"
  },
  "domains": {
    "configPath": "./domains"
  },
  "firewall": {
    "enabled": true,
    "rateLimit": 100,
    "rateLimitWindow": 60000,
    "maxBodySize": 10485760,
    "maxFileSize": 5242880,
    "blockFileUploads": false,
    "bannedIPsPath": "./src/Data/banned-ips.json",
    "suspiciousPatterns": [
      "\\.\\.[\\/\\\\]",
      "etc\\/passwd",
      "proc\\/self",
      "<script",
      "javascript:",
      "onerror=",
      "onclick=",
      "eval\\(",
      "union.*select",
      "drop.*table",
      "insert.*into"
    ]
  },
  "security": {
    "enableHSTS": true,
    "hstsMaxAge": 31536000,
    "enableCSP": true,
    "cspPolicy": "default-src 'self'",
    "enableCORS": true,
    "corsOrigin": "*",
    "enableXFrameOptions": true,
    "xFrameOptions": "SAMEORIGIN"
  },
  "compression": {
    "enabled": true,
    "threshold": 1024,
    "level": 6
  },
  "timeout": {
    "proxy": 30000,
    "server": 60000
  },
  "websocket": {
    "enabled": true
  },
  "healthCheck": {
    "enabled": true,
    "path": "/health"
  },
  "admin": {
    "enabled": true,
    "port": 9090,
    "token": "change-this-secret-token",
    "allowedIPs": []
  },
  "logging": {
    "level": "info",
    "maxFiles": "30d",
    "maxSize": "20m",
    "directory": "./logs"
  }
}

